@import "../../common/css/list.wxss";
.header{
  height: 92rpx;
  background: #181818;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.city{
  width: 142rpx;
  text-align: center;
  line-height: 92rpx;
  font-size: 29rpx;
  color: #d5ac82;
}
.city::after{
  content: "";
  display: inline-block;
  border-width: 10rpx 10rpx 0;
  border-style: solid;
  border-color: #d3b9a0 transparent transparent;
  margin-left: 10rpx;
  vertical-align:middle;
  height: 0;
  position: relative;
  top:-2rpx;
}
.userinfo{
  width: 48rpx;
  height: 48rpx;
  margin: 21rpx 29rpx 0 0;
}
.userinfo image{
  width: 100%;
  height: 100%;
}
.nav-list{
  width: 100%;
  height: 160rpx;
  background: #ffffff;
  padding-top: 19rpx;
  display: flex; 
  flex-direction: row;
  justify-content:space-around; 
}
.nav-list navigator{
  width: 98rpx;
  height: 88rpx;
}
.nav-list navigator text{
  display: inline-block;
  width: 100%;
  margin-top: 12rpx;
  text-align: center;
  font-size: 23rpx;

}
.nav-list navigator  image{
  width: 100%;
  height: 100%;
}
.hot{
  margin-top: 20rpx;
  background: #ffffff;
 }
.hot-title{
  display: block;
  height: 54rpx;
  line-height: 54rpx;
  font-size: 24rpx;
  color: #777777;
  margin-left: 31rpx;
}

