@import "../../common/css/list.wxss";
@import "../../common/css/font.wxss";
.shoplist{
  padding-top: 95rpx;
  z-index: 1;
}
.list-nav{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  border:2rpx solid #dfdfdf;
  justify-content: space-between;
  background: #f0f0f0;
  z-index: 999;
}
.list-nav  .near,.list-nav .sort{
  width: 373rpx;
  height:100%;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color:#999;
}
.list-nav text::after{
  color: #999;
  margin-left: 10rpx;
}
.options{
  position: fixed;
  top:85rpx;
  left:0;
  width: 100%;
  padding: 20rpx 30rpx;
  background: #fff;
  z-index: 999;
   
}
.range,.sort {
  display: none;
  font-size: 26rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #e4e4e4;
}
.display{
  z-index: 999;
  display: block;
}
.active,.sanjiaoxing:active{
  border-bottom: 1px solid rgb(221, 67, 6);
  color:  rgb(221, 67, 6) !important;
  z-index: 999;
}
.mask{
  position:fixed;
  left: 0;
  top: 0;
  height: 100%;
  width:100%;
  background: rgba(0,0,0,0.4);
  z-index: 998;

}
